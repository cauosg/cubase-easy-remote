<Window x:Class="CubaseControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cubase Control" Height="400" Width="300">
	<Grid>
		<!-- 레이아웃 설정 -->
		<Grid.RowDefinitions>
			<RowDefinition Height="20*" />
			<!-- 상단 20% -->
			<RowDefinition Height="80*" />
			<!-- 믹서 공간 -->
		</Grid.RowDefinitions>

		<!-- 컨트롤 영역 -->
		<DockPanel Grid.Row="0" Margin="10">
			<TextBlock Text="Mixer" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" DockPanel.Dock="Left"/>
			<Button Content="+ Add Track" Width="100" Click="AddTrack_Click"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Margin="0,0,10,0"/>
		</DockPanel>

		<!-- 믹서 공간 (스크롤 가능) -->
		<ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto">
			<UniformGrid Name="MixerPanel" Columns="1" Margin="10"
                         VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
		</ScrollViewer>
	</Grid>
</Window>
